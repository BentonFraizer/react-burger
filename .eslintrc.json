{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "plugins": [
    "cypress"
  ],
  "extends": [
    "airbnb-base",
    "plugin:@typescript-eslint/recommended",
    "plugin:cypress/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "undefined": 0,
    "linebreak-style": 0,
    "quotes": ["error", "single"],
    "comma-dangle": "off",
    "import/no-unresolved": 0,
    "import/extensions": 0,
    "object-curly-newline": "off",
    "import/prefer-default-export": "off",
    "max-len": ["error", 130],
    "no-underscore-dangle": 0
  },
  "parser": "@typescript-eslint/parser"
}
